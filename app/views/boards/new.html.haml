.container
    %h2.header_pageTitle New Board
    .new-board-form
        = form_with(model: @board, url: boards_path, local: true) do |f|
            %div.board_field
                = f.label :name, 'Name'
                %br/
                = f.text_field :name
            %div.board_field
                = f.label :description, 'Description'
                %br/
                = f.text_area :description, class: "board-description"
            .actions
                = f.submit "Submit", class: "submit-btn"